<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.SeriesHandbook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appbar_bg</item>
        <item name="colorPrimaryVariant">@color/superior_bar_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SeriesHandbook.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SeriesHandbook.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SeriesHandbook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="bottom_nav_movie" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">?attr/colorOnSecondary</item>
        <item name="itemIconTint">@color/botton_nav_movie</item>
        <item name="itemTextColor">@color/botton_nav_movie</item>
    </style>
</resources>